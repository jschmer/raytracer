#Cornell Box
size 640 480
camera 0 0 1 0 0 -1 0 1 0 45
output scene6-hack.png

maxdepth 5



maxverts 12
#planar face
vertex -1 +1 0
vertex -1 -1 0
vertex +1 -1 0
vertex +1 +1 0

#cube
vertex -1 +1 +1
vertex +1 +1 +1
vertex -1 -1 +1
vertex +1 -1 +1

vertex -1 +1 -1
vertex +1 +1 -1
vertex -1 -1 -1
vertex +1 -1 -1


ambient 0 0 0
specular 0 0 0
shininess 1
emission 0 0 0
diffuse 0 0 0

attenuation 1 0.1 0.05

point 0 0.44 -1.5 0.8 0.8 0.8
directional 0 1 -1 0.2 0.2 0.2

#red
pushTransform
translate 0 0 -3
rotate 0 1 0 240
scale 10 10 1
diffuse 1 0 0
tri 0 1 2
tri 0 2 3
popTransform
